public class EmailUpdatedNotificationEmail implements Email {

    private String lba = Email.lb1;
    private String lbb = Email.lb2;
    private String styles = Email.style;
//    
    private String subject = "";
    private String body = "";

    public EmailUpdatedNotificationEmail(userBean thisUser) {
        body += styles;
        body += "<div class=\"style\">";
        body += "Hello " + thisUser.getFirstName() + ",";
        body += lbb;
        body += "looks like youve changed your email address with us, ";
        body += lbb;
        body += "this is the address we currently have for you,";
        body += lbb;
        body += "................";
        body += lbb;
        body += "<a href=\"mailto:" + thisUser.getEmail().trim() + "\">" + thisUser.getEmail() + "</a>";
        body += lbb;
        body += "................";
        body += lbb;
        body += "If you have any problems signing in, please send an email";
        body += "to <a href=\"mailto:help@pachume.com\">help@pachume.com</a> and we will get right on it,";
        body += lbb;
        body += "See you there,";
        body += lbb;
        body += "James Hogan,";
        body += lbb;
        body += "(The lazy guy,)";
        body += lbb;
        body += "<a href=\"http://pachume.com\" >http://pachume.com</a>";
        body += lbb;
        body += lbb;
        body += "</div>";
    }

    public String getSubject() {
        return subject;
    }

    public String getBody() {
        return body;
    }
}
